{
  "name": "spookfox",
  "private": "true",
  "license": "GPL-3.0",
  "scripts": {
    "clean": "rm -rf ./addons-dist",
    "build:ff": "web-ext -s ./src -a ./addons-dist build",
    "build:chrome": "crx pack ./src -p ./key.pem -o ./addons-dist/spookfox.crx",
    "build:addon": "mkdir -p ./addons-dist && npm run build:chrome && npm run build:ff",
    "build": "npm run clean && npm run build:addon",
    "publish:ff-unlisted": "web-ext -s ./src -a ./addons-dist --api-key $FIREFOX_ADDON_KEY --api-secret $FIREFOX_ADDON_SECRET sign --channel=unlisted"
  },
  "devDependencies": {
    "crx": "5.0.1",
    "prettier": "3.3.3",
    "web-ext": "8.2.0",
    "webextension-polyfill": "0.12.0"
  },
  "dependencies": {
  }
}
